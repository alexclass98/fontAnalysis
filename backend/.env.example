# Пример .env файла для Django backend

# Секретный ключ Django
SECRET_KEY=your-very-secret-key

# Включить режим отладки (только для разработки)
DEBUG=1

# Список разрешённых хостов (через запятую)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Строка подключения к базе данных (PostgreSQL пример)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/your_db_name

# Требовать SSL для подключения к БД (1 для продакшена, 0 для разработки)
DJANGO_DB_SSL_REQUIRE=0

# Разрешённые источники CORS (через запятую)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Доверенные источники для CSRF (через запятую)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000